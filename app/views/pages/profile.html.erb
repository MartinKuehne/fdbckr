<div class="container mt-5">
  <!-- Content here -->
  <div class="d-flex flex-row bd-highlight mb-3 justify-content-between">
    <div class="d-flex">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class:"profile-home", height: 300, width: 400, crop: :fill, gravity: "faces" %>
      <% else %>
        <img src="https://source.unsplash.com/EdAVNRvUVH4/150x150" class="profile-home" alt="Profile Picture ">
      <% end %>
      <!-- <img src="https://source.unsplash.com/X6Uj51n5CE8/150x150" class="img-thumbnail" alt="Profile Picture"> -->
    </div>
    <div class="d-flex flex-column bd-highlight flex-grow-1 ml-4">
      <div><h1 style="font-size: 32px">@<%= current_user.username %></h1></div>
      <div>üëæ <%= current_user.first_name %> <%= current_user.last_name %></div>
      <div>üìç <%= current_user.location %></div>
    </div>
  </div>

  <div class="bio-seperator d-flex">
    <p class="centered-content mx-1 mb-2 mt-4"><%= current_user.bio %></p>
  </div>

    <!--Grid row-->
  <div class="grid mt-4">
    <div class="gutter-size"></div>
    <% current_user.artworks.each do |artwork| %>
      <% artwork.photos.each do |photo| %>
        <div class="grid-item">
          <%= cl_image_tag photo.key, class: "w-100" %>

          <a href="<%= artwork_path(artwork) %>" class="hover-img-container-2">
            <div class="overlay">
              <%= artwork.title %>
            </div>
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
</div>




