<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex">
  <%= link_to root_path, class: "navbar-brand" do %>
    <p class="logo mt-1 mb-1 ml-5 mr-5">fdbckr.</p>
  <% end %>

  <ul class="navbar-nav mr-auto">
    <li class="nav-item active">
      <%= link_to "Home", root_path, class: "nav-link" %>
    </li>
    <li class="nav-item active">
      <%= link_to "Artists", artists_path, class: "nav-link" %>
    </li>
    <li class="nav-item active">
      <%= link_to "Artworks", discover_path, class: "nav-link" %>
    </li>
    <li class="nav-item active">
      <%= link_to "Support", root_path, class: "nav-link" %>
    </li>
  </ul>

  <div class="btn-wrapper-upload">
    <a href="/artworks/new" class="btn-upload">Create a post</a>
    <a href="#" class="btn-shadow-upload">Create a post</a>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="full-height">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <% if current_user %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag("https://source.unsplash.com/EdAVNRvUVH4/150x150", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", profile_path, class: "dropdown-item" %>
              <%= link_to "Friends", friends_path(current_user), class: "dropdown-item" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item"  %>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
