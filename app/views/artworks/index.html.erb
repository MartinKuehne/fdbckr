<div class="row">
  <div class="col-sm-9">
    HELLO WORLD
  </div>
</div>


<% @artworks.each do |artwork| %>
  <div class="col">
    <div class="row">
      <div class="col-sm-9">
        <img class="bd-placeholder-img card-img-top" width="100%" height="225" style="object-fit:cover;" src="https://picsum.photos/seed/picsum/536/354" alt="">
          <%= artwork.user.first_name %>
          <%= artwork.user.last_name %>
      </div>
      <div>
        <%= simple_form_for [artwork, @comment] do |f| %>
        <%= f.input :content, label: false %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
  </div>
<% end %>
